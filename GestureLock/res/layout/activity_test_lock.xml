<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_overlay"
    android:columnCount="1"
    tools:context="com.infosec.gesturelock.HomeActivity" >

    <RelativeLayout
        android:id="@+id/main_buttons"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="fill_horizontal"
        android:paddingLeft="6dp" >

        <Button
            android:id="@+id/lockDeviceBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:minWidth="191dip"
            android:onClick="startTestBtn"
            android:text="Start Test" />

        <TextView
            android:id="@+id/setPassInstruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/lockDeviceBtn"
            android:layout_alignRight="@+id/lockDeviceBtn"
            android:layout_below="@+id/lockDeviceBtn"
            android:layout_marginTop="23dp"
            android:text="Press Start Test to practice unlocking with your password."
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/lockView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/setPassInstruction"
            android:layout_centerHorizontal="true"
            android:src="@drawable/unlock" />
        
    </RelativeLayout>

</GridLayout>